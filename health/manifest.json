{
  "manifest_version": 2,
  "name": "Translate Extension",
  "version": "1.0",
  "description": "Translate selected text to Chinese",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
